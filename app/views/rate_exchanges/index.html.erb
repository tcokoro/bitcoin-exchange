    <br/>
    <br/>
    <div class="container">

      <div class="starter-template">
        <h1>Bitcoin Exchange</h1>
        <p class="lead">Enter the amount , whether you want to buy or sell, and the currency of the amount you entered.</p>

        <%=form_tag("/convert", method: "get") do %>
          <%= text_field_tag(:amount) %>
          <%= select_tag(:type, options_for_select([['Buy', 1],['Sell',2]])) %>
          <%= select_tag(:currency, options_for_select([['USD', 1],['BTC',2]])) %>
          <%= submit_tag('Convert')%>
        <% end %>
      </div>

    </div><!-- /.container -->


